<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns="http://xmlns.jcp.org/xml/ns/javaee"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee
         http://xmlns.jcp.org/xml/ns/javaee/web-app_4_0.xsd"
         version="4.0">

    <display-name>Legacy Application with Azure AD Authentication</display-name>
    
    <description>
        Legacy Java web application integrated with Azure AD OAuth2.
        Supports cookie-based session management with user principal storage.
    </description>

    <!-- Azure AD Callback Filter -->
    <filter>
        <filter-name>azureADCallbackFilter</filter-name>
        <filter-class>com.example.legacyapp.filter.AzureADCallbackFilter</filter-class>
        
        <!-- Azure AD Configuration -->
        <init-param>
            <param-name>azureAd.clientId</param-name>
            <param-value>${AZURE_CLIENT_ID}</param-value>
        </init-param>
        
        <init-param>
            <param-name>azureAd.clientSecret</param-name>
            <param-value>${AZURE_CLIENT_SECRET}</param-value>
        </init-param>
        
        <init-param>
            <param-name>azureAd.tenantId</param-name>
            <param-value>${AZURE_TENANT_ID}</param-value>
        </init-param>
        
        <init-param>
            <param-name>azureAd.redirectUri</param-name>
            <param-value>${AZURE_REDIRECT_URI}</param-value>
        </init-param>
        
        <init-param>
            <param-name>azureAd.scope</param-name>
            <param-value>openid profile email</param-value>
        </init-param>
    </filter>
    
    <filter-mapping>
        <filter-name>azureADCallbackFilter</filter-name>
        <url-pattern>/login/oauth2/code/azure</url-pattern>
    </filter-mapping>

    <!-- Authorization Filter - runs on all requests -->
    <filter>
        <filter-name>authorizationFilter</filter-name>
        <filter-class>com.example.legacyapp.filter.AuthorizationFilter</filter-class>
        
        <!-- Excluded paths that don't require authentication -->
        <init-param>
            <param-name>excludedPaths</param-name>
            <param-value>/login/*,/logout,/error,/error.html,/unauthorized,/unauthorized.html,/public/*,/health,/favicon.ico</param-value>
        </init-param>
    </filter>
    
    <filter-mapping>
        <filter-name>authorizationFilter</filter-name>
        <url-pattern>/*</url-pattern>
        <dispatcher>REQUEST</dispatcher>
    </filter-mapping>

    <!-- Login Servlet -->
    <servlet>
        <servlet-name>loginServlet</servlet-name>
        <servlet-class>com.example.legacyapp.servlet.LoginServlet</servlet-class>
        
        <!-- Azure AD Configuration -->
        <init-param>
            <param-name>azureAd.clientId</param-name>
            <param-value>${AZURE_CLIENT_ID}</param-value>
        </init-param>
        
        <init-param>
            <param-name>azureAd.tenantId</param-name>
            <param-value>${AZURE_TENANT_ID}</param-value>
        </init-param>
        
        <init-param>
            <param-name>azureAd.redirectUri</param-name>
            <param-value>${AZURE_REDIRECT_URI}</param-value>
        </init-param>
        
        <init-param>
            <param-name>azureAd.scope</param-name>
            <param-value>openid profile email</param-value>
        </init-param>
    </servlet>
    
    <servlet-mapping>
        <servlet-name>loginServlet</servlet-name>
        <url-pattern>/login/oauth2/azure</url-pattern>
    </servlet-mapping>

    <!-- Logout Servlet -->
    <servlet>
        <servlet-name>logoutServlet</servlet-name>
        <servlet-class>com.example.legacyapp.servlet.LogoutServlet</servlet-class>
        
        <!-- Azure AD Configuration -->
        <init-param>
            <param-name>azureAd.tenantId</param-name>
            <param-value>${AZURE_TENANT_ID}</param-value>
        </init-param>
        
        <!-- Post-logout redirect URI (optional) -->
        <init-param>
            <param-name>azureAd.postLogoutRedirectUri</param-name>
            <param-value>/</param-value>
        </init-param>
    </servlet>
    
    <servlet-mapping>
        <servlet-name>logoutServlet</servlet-name>
        <url-pattern>/logout</url-pattern>
    </servlet-mapping>

    <!-- Welcome Files -->
    <welcome-file-list>
        <welcome-file>home.jsp</welcome-file>
        <welcome-file>index.jsp</welcome-file>
        <welcome-file>index.html</welcome-file>
    </welcome-file-list>

    <!-- Session Configuration -->
    <session-config>
        <!-- Session timeout: 30 minutes -->
        <session-timeout>30</session-timeout>
        <cookie-config>
            <!-- HttpOnly flag for security -->
            <http-only>true</http-only>
            <!-- Secure flag (enable in production with HTTPS) -->
            <!-- <secure>true</secure> -->
        </cookie-config>
    </session-config>

    <!-- Error Pages -->
    <error-page>
        <error-code>401</error-code>
        <location>/unauthorized.html</location>
    </error-page>
    
    <error-page>
        <error-code>403</error-code>
        <location>/unauthorized.html</location>
    </error-page>
    
    <error-page>
        <error-code>404</error-code>
        <location>/error.html</location>
    </error-page>
    
    <error-page>
        <error-code>500</error-code>
        <location>/error.html</location>
    </error-page>
    
    <error-page>
        <exception-type>java.lang.Exception</exception-type>
        <location>/error.html</location>
    </error-page>

    <!-- MIME Type Mappings -->
    <mime-mapping>
        <extension>css</extension>
        <mime-type>text/css</mime-type>
    </mime-mapping>
    
    <mime-mapping>
        <extension>js</extension>
        <mime-type>application/javascript</mime-type>
    </mime-mapping>
    
    <mime-mapping>
        <extension>json</extension>
        <mime-type>application/json</mime-type>
    </mime-mapping>

</web-app>