package com.example.legacyapp. servlet;

import javax.servlet. ServletConfig;
import javax.servlet.ServletException;
import javax.servlet. http.HttpServlet;
import javax.servlet.http.HttpServletRequest;
import javax.servlet.http.HttpServletResponse;
import javax.servlet.http. HttpSession;
import java.io.IOException;

/**
 * Servlet to handle logout
 */
public class GatewayLogoutServlet extends HttpServlet {

    private static final long serialVersionUID = 1L;
    private String gatewayUrl;

    public void init(ServletConfig config) throws ServletException {
        super.init(config);
        
        gatewayUrl = config.getInitParameter("gatewayUrl");
        if (gatewayUrl == null || gatewayUrl.isEmpty()) {
            gatewayUrl = "http://localhost:9090/gateway";
        }

        System.out. println("==========================================");
        System.out.println("GatewayLogoutServlet INITIALIZED");
        System.out.println("Gateway URL: " + gatewayUrl);
        System.out. println("==========================================");
    }

    protected void doGet(HttpServletRequest request, HttpServletResponse response)
            throws ServletException, IOException {

        System.out.println("Logout requested");

        // Invalidate local session
        HttpSession session = request.getSession(false);
        if (session != null) {
            String username = (String) session.getAttribute("username");
            System.out.println("Invalidating session for user: " + username);
            session.invalidate();
        }

        // Redirect to gateway logout to clear gateway session
        String returnUrl = request.getContextPath() + "/login.html";
        String redirectUrl = gatewayUrl + "/auth/logout?returnUrl=" + 
            java.net.URLEncoder.encode(returnUrl, "UTF-8");

        System.out.println("Redirecting to gateway logout: " + redirectUrl);
        response.sendRedirect(redirectUrl);
    }
}
